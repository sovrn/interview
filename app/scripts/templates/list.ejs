<button id="create" type="button" class="btn btn-primary" data-toggle="button" aria-pressed="false" autocomplete="off">
    Create Note
</button>
<button id="clear-all" class="btn btn-danger">
    Remove All Notes
</button>
<% if(_.size(notes) === 0){ %>
    <div>You have no notes</div>
<% }else{ %>
    <div class="table-responsive note-list-container">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="title">Title</th>
                    <th class="body">Body</th>
                </tr>
            </thead>
            <tbody>
                <% notes.each(function(note){  %>
                    <tr>
                        <td>
                            <a data-note-id="<%= note.get('id') %>" class="note">
                                <%= note.get('title') %>
                            </a>
                        </td>
                        <td class="ellipsis">
                            <%= note.get('body') %>
                        </td>
                        <td>
                            <button class="delete" data-note-id="<%= note.get('id') %>" class="btn btn-info">Remove Note</button>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
<% } %>